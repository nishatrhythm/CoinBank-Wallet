<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/singnin"
    tools:context=".signIn">


    <ImageView
        android:id="@+id/NameImage"
        android:layout_width="293dp"
        android:layout_height="102dp"
        android:src="@drawable/appname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <ImageView
        android:id="@+id/EmailImage"
        android:layout_width="300dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_boxbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameImage"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/SignInEmailEditText"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/EmailImage"
        app:layout_constraintEnd_toEndOf="@+id/EmailImage"
        app:layout_constraintStart_toStartOf="@+id/EmailImage"
        app:layout_constraintTop_toTopOf="@+id/EmailImage"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/PasswordImage"
        android:layout_width="298dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_boxbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailImage" />

    <EditText
        android:id="@+id/SignInPasswordEditText"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/PasswordImage"
        app:layout_constraintEnd_toEndOf="@+id/PasswordImage"
        app:layout_constraintStart_toStartOf="@+id/PasswordImage"
        app:layout_constraintTop_toTopOf="@+id/PasswordImage"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/custom_button_iii"
        android:backgroundTint="#1C3879"
        android:text="SIGN IN"
        android:textColor="@color/offWhiteColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordImage" />

    <TextView
        android:id="@+id/ForgotImage"
        android:layout_width="115dp"
        android:layout_height="22dp"
        android:layout_marginTop="44dp"
        android:text="Forgot Password?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />

    <TextView
        android:id="@+id/newUser"
        android:layout_width="74dp"
        android:layout_height="25dp"
        android:layout_marginBottom="108dp"
        android:text="New User? "
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createAccount"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgotImage"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="148dp"
        android:layout_height="22dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="108dp"
        android:text="Create Account Here."
        android:textColor="#54AF57"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgotImage"
        app:layout_constraintVertical_bias="0.454" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474" />

</androidx.constraintlayout.widget.ConstraintLayout>